# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
max_line_length = 88

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[Pipfile.lock]
indent_size = 2

[{Pipfile,*.toml}]
indent_size = 4

[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80
